class Solution:
    def removeDuplicates(self, nums: list[int]) -> int:
        if not nums:
            return 0
              
        k = 1  # Pointer for the position of the next unique element
        duplicate_val = None
        # the only case of duplicates could be adjacent elements as the array is sorted       
        for i in range(1, len(nums)):
            if nums[i] != nums[i - 1] and nums[i]!=duplicate_val:
                nums[k] = nums[i]
                k += 1
            else:
                duplicate_val=nums[i]
                nums[k] = nums[i]
                k += 1
        
        return k
    
    